{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Compilation du projet (sans bibliographie, index et nomenclature)",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./make",
            "presentation": {
                "reveal": "always", //always, never, silent
                "panel": "shared" //shared, dedicated, new
              },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Compilation du projet (complète)",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./make --full",
            "presentation": {
                "reveal": "always", //always, never, silent
                "panel": "shared" //shared, dedicated, new
              },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Affichage des erreurs",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "code .render_report_log.txt"
        },
        {
            "type": "shell",
            "label": "Vérification orthographique des fichiers",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./make --check"
        },
        {
            "type": "shell",
            "label": "Afficher le rendu PDF",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "code main.pdf"
        },
        {
            "type": "shell",
            "label": "Génération des snippets VSCode depuis la bibliothèque Utils",
            "options": {
                "cwd": "${workspaceFolder}/.vscode"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "php generateSnippets.php"
        },
        {
            "type": "shell",
            "label": "Installation des utiliaires de compilation",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./make --install"
        },
        {
            "type": "shell",
            "label": "Ajout d'une version de projet",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./make --update"
        }
    ]
}

